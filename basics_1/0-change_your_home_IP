#!/usr/bin/env bash
# Configure DNS resolutions for localhost and facebook.com

# Check if running as root
if [ "$EUID" -ne 0 ]; then
    echo "Please run as root using sudo"
    exit 1
fi

# Create new hosts file with the required configurations
cat > /etc/hosts << EOF
127.0.0.1	localhost
127.0.0.2	localhost
::1		localhost ip6-localhost ip6-loopback
ff02::1		ip6-allnodes
ff02::2		ip6-allrouters
8.8.8.8		facebook.com
EOF

echo "DNS configurations updated successfully!"
