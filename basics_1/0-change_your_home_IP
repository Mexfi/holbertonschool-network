#!/usr/bin/env bash
# Configure DNS resolutions for localhost and facebook.com

sudo cp /etc/hosts /etc/hosts.backup

# First, ensure 127.0.0.2 localhost exists
if ! grep -q "127.0.0.2.*localhost" /etc/hosts; then
    echo "127.0.0.2 localhost" | sudo tee -a /etc/hosts
fi

# Then add facebook.com entry (remove existing first)
sudo sed -i '/facebook.com/d' /etc/hosts
echo "8.8.8.8 facebook.com" | sudo tee -a /etc/hosts
